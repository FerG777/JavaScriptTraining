// Define the Book class
class Book {
    // Constructor for the Book class
    constructor(title, author, pages) {
        this.title = title;
        this.author = author;
        this.pages = pages;
    }

    // Method to display the book information
    getInfo() {
        return `${this.title} by ${this.author}, ${this.pages} pages`;
    }
}

// Instantiate the Book class
const book = new Book("The Catcher in the Rye", "J.D. Salinger", 224);

// Display the book information in the console
console.log(book.getInfo());
